public class decomposeString {
	public static char[] decomposeString(String word)
	{
	   char[] characters = new char[word.length()];
	   for(int i=0; i<word.length(); i++)
	   {
		   characters[i] = word.charAt(i);
	   }
	   return characters;
	  
	}
	public static void main(String[] args)
	{
		
		String word = "my_array";
		char[] array = decomposeString(word);
		for(int i = 0;i < array.length;i++)
		{
		System.out.println("Char "+i+" is: "+(array[i]));
		}
	}
}
